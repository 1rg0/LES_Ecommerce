@model SolicitarTrocaViewModel

<form asp-controller="Trocas" asp-action="Solicitar" method="post" id="form-solicitar-troca">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="PedidoId" />

    <h5>Selecione o(s) item(ns) para trocar:</h5>
    <div class="mb-3">
        @foreach (var item in Model.ItensParaTroca)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="ItensSelecionados" value="@item.ItemPedidoChave" id="item-@item.ItemPedidoChave">
                <label class="form-check-label" for="item-@item.ItemPedidoChave">
                    @item.NomeProduto
                </label>
            </div>
        }
        <span id="itens-selecionados-error" class="text-danger" style="font-size: 0.875em;"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Motivo" class="form-label">Motivo da Troca</label>
        <textarea asp-for="Motivo" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Motivo" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end">
        <button type="button" class="btn btn-secondary me-2" data-bs-dismiss="modal">Cancelar</button>
        <button type="submit" class="btn btn-warning">Confirmar Solicitação</button>
    </div>
</form>