@model Ecommerce_Jogos.Models.CartaoIndexViewModel

@{
    ViewData["Title"] = "Gerenciar Cartões";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h1>Gerenciar Cartões de Crédito de: @Model.ClienteNome</h1>
    </div>
    <div>
        <a asp-controller="Clientes" asp-action="Details" asp-route-id="@Model.ClienteID" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Voltar para Detalhes do Cliente
        </a>
    </div>
</div>

<hr>
<a asp-controller="Cartoes" asp-action="Create" asp-route-clienteId="@Model.ClienteID" class="btn btn-success mb-3">Adicionar Novo Cartão</a>

<br />
<br />

@if (Model.Cartoes.Any())
{
    @foreach (var cartao in Model.Cartoes)
    {
        <div class="card mb-3">
            <div class="card-header">
                @if (cartao.Preferencial)
                {
                    <h3>Cartão Preferencial</h3>
                }
                else
                {
                    <h3>Cartão Final **** @cartao.UltimosQuatroDigitos</h3>
                }
            </div>
            <div class="card-body">
                <p>
                    <strong>Bandeira:</strong> @cartao.Bandeira<br>
                    <strong>Nome:</strong> @cartao.NomeImpresso<br>
                    <strong>Número:</strong> **** **** **** @cartao.UltimosQuatroDigitos<br>
                </p>

                <button type="button" class="btn btn-sm btn-danger"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        data-card-id="@cartao.ID">
                    Excluir
                </button>

                @if (!cartao.Preferencial)
                {
                    <form asp-action="SetPreferred" asp-route-id="@cartao.ID" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-sm btn-info">Tornar Preferencial</button>
                    </form>
                }
            </div>
        </div>
    }
}
else
{
    <div class="alert alert-info">
        Nenhum cartão cadastrado para este cliente.
    </div>
}

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabel">Confirmar Exclusão</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Tem certeza que deseja excluir permanentemente este cartão?</p>
            </div>
            <div class="modal-footer">
                <form asp-controller="Cartoes" asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteCardId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Excluir</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            var confirmDeleteModal = document.getElementById('confirmDeleteModal');

            confirmDeleteModal.addEventListener('show.bs.modal', function (event) {

                var button = event.relatedTarget;

                var cardId = button.getAttribute('data-card-id');

                var modalHiddenInputElement = confirmDeleteModal.querySelector('#deleteCardId');

                modalHiddenInputElement.value = cardId;
            });
        });
    </script>
}